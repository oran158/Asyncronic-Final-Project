html
    head
        title=title
    body
        h1=message
        form(class="form-signin" method="POST" action="./login")
            //-add id
            label( for="inputID" class="sr-only") ID:
            input(type="int" name="name" id="inputID" class="form-control" placeholder="ID" required autofocus)

            //-input first name
            label( for="inputFirstName" class="sr-only") First name:
            input(type="text" name="sum" id="inputFirstName" class="form-control" placeholder="First name" required autofocus)

            //-input last name
            label( for="inputLastName" class="sr-only") Last name:
            input(type="text" name="cate" id="inputLastName" class="form-control" placeholder="Last name" required autofocus)

            //-input birth
            label( for="inputBirth" class="sr-only") Data birth:
            input(type="text" name="des" id="inputBirth" class="form-control" placeholder="Data birth" required autofocus)

            //-input material
            label( for="inputMaterial" class="sr-only") Material:
            input(type="text" name="des" id="inputMaterial" class="form-control" placeholder="Material" required autofocus)

            //-signIn button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Sing up

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];

        p=info
