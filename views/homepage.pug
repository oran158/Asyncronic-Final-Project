extends layout

block content
  div.text-center
    form(class="form-signin" method="POST" action="/users/login")
      #error
        if error
          p.text-danger Error!!!

      - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
      h1(class=h1Classes) Please sign in

      //-input ID
      label( for="inputId" class="sr-only") User Id:
      input(type="text" name="id" id="inputId" class="form-control" placeholder="ID" required autofocus)

      //-signIn button
      - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
      button(class=buttonClass type="submit") Sign in

    form(class="form-signin" method="POST" action="/users/singUp")
      #error
        if error
          p.text-danger Error!!!

      //-signIn button
      - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
      button(class=buttonClass type="submit") Sing Up here

      - var pClasses=['mt-5', 'mb-3', 'text-muted'];
      p(class=pClasses) &copy; Yonatan & Oran